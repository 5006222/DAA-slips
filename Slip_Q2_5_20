package project;

import java.io.File;
import java.io.IOException;
import java.util.Scanner;

public class Insertion_sort {
	
	public static void insertionSort(int[] arr, int n)
	{
		for(int i=0;i<n;i++)
		{
			int key=arr[i];
			int j=i-1;
			
			while(j>=0 && arr[j]>key)
			{
				arr[j+1]=arr[j];
				j=j-1;
			}
			arr[j+1]=key;
		}
	}

   

    public static void main(String[] args) throws IOException {
        File file = new File("D:\\Eclipse\\project\\src\\project\\a.txt");
        Scanner fileScanner = new Scanner(file);

        int[] arr = new int[100];
        int count = 0;

        while (fileScanner.hasNextInt()) {
            arr[count++] = fileScanner.nextInt();
        }

        insertionSort(arr, count);

        System.out.println("Sorted array using Insertion Sort:");
        for (int i = 0; i < count; i++) {
            System.out.print(arr[i] + " ");
        }

        System.out.println("\n\nðŸ“Š Time Complexity of Insertion Sort:");
        System.out.println("Best Case   : O(n)");
        System.out.println("Worst Case  : O(n^2)");
        System.out.println("Average Case: O(n^2)");
    }
}
